<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<ui-table xmlns="http://www.efaps.org/xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd">
    <uuid>f9bc0a8c-3278-4c34-940c-ec09ede4cd06</uuid>
    <file-application>eFapsApp-Payroll</file-application>
    
    <definition>
        <version-expression>(version==latest)</version-expression>
        <name>Payroll_AdvancePositionTable</name>
        <field name="type">
            <property name="Attribute">Type</property>
            <property name="Label">Payroll_PositionAbstract/Type.Label</property>
            <property name="ShowTypeIcon">true</property>
        </field>
        <field name="positionNumber">
            <property name="Attribute">PositionNumber</property>
            <property name="Label">Payroll_PositionAbstract/PositionNumber.Label</property>
        </field>
        <field name="key">
            <property name="SelectAlternateOID">linnkto[RuleAbstractLink].oid</property>
            <property name="Attribute">Key</property>
            <property name="Label">Payroll_PositionAbstract/Key.Label</property>
            <property name="HRef">TREE</property>
        </field>
        <field name="description">
            <property name="Attribute">Description</property>
            <property name="Label">Payroll_PositionAbstract/Description.Label</property>
        </field>
        <field name="amount">
            <property name="Attribute">Amount</property>
            <property name="Label">Payroll_PositionAbstract/Amount.Label</property>
            <property name="Align">right</property>
        </field>
        <field name="currencyLink">
            <property name="Select">linkto[CurrencyLink].attribute[Symbol]</property>
            <property name="Label">Payroll_PositionAbstract/CurrencyLink.Label</property>
        </field>
        <field name="buttonOpenInNewWindow">
            <icon>eFapsActionNewWindow</icon>
            <property name="HRef">${COMMONURL}/MenuTree.jsp</property>
            <property name="Target">popup</property>
            <property name="SortAble">false</property>
            <property name="Width">15px</property>
        </field>
    </definition>
</ui-table>
